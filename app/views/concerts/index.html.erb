<h1> These are the concerts so far: </h1>
<%= render partial: 'shared/header' %>
<h2> Later this month  </h2>
<% @concerts.each do |concert| %>
	<% li_color = ["success","info","warning","danter"] %>
	<% if concert.date != Date.today %>
		<ul class="list-group">
			<li class="list-group-item list-group-item-<%= li_color.sample %>"> Band: <%= concert.band %>, City: <%= concert.city %>, Venue: <%= concert.venue %>, Price: $<%= concert.price %>, Date: <%= concert.date.strftime('%d/%m/%Y') %>, <%= link_to "More info", concert_path(concert.id) %> </li>	
		</ul>
	<% end %>
<% end %>